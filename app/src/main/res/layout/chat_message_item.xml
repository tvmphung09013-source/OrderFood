<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Customer Message (Right side) -->
    <LinearLayout
        android:id="@+id/customerMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#4CAF50"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/customerMessageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer message"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/customerTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="10:30 AM"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:alpha="0.7" />
        </LinearLayout>
    </LinearLayout>

    <!-- Store Message (Left side) -->
    <LinearLayout
        android:id="@+id/storeMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#E0E0E0"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/storeSenderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Store"
                android:textColor="#333333"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/storeMessageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Store message"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/storeTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="10:30 AM"
                android:textColor="#666666"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
